  <%= form_with(model: user, local: true, :id => 'signupForm') do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div id="signupInnerDiv">
      <div id="signupHeader" class="signupElement">
        <img id="signupHeaderImage">
      </div>

      <% if action_name == 'new' %>
      <div id="signupUser" class="signupElement">
        <%= form.label :username %>
        <%= form.text_field :username, id: "signupUserInput", class: "signupInput" %>
      </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :name, class: "signupInput" %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, id: :password, class: "signupInput" %>
      </div>

      <div class="field">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :password_confirmation, class: "signupInput" %>
      </div>

      <div id="signupEmail" class="signupElement">
        <%= form.label :email %>
        <%= form.text_field :email, id: "signupEmailInput", class: "signupInput" %>
      </div>

      <% if action_name == 'edit' && @current_user.present? && @current_user[:admin] %>
      <div class="field">
        <%= form.label :admin %>
        <%= form.check_box :admin, id: :user_admin %>
      </div>
      <% end %>

      <div id="signupSubmit" class="signupElement">
        <%= form.submit :submit, id: "signupSubmitButton", class: "signupButton" %>
      </div>
    </div>
  <% end %>
