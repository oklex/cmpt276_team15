<% @pagetitle = "User List" -%>

<p id="notice"><%= notice %></p>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th> User Name </th>
      <th> Name </th>
      <th> Email </th>
      <th> Max Points </th>
      <th> Max Duration </th>
      <th colspan = "2"> Admin </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.max_points %></td>
        <td><%= user.longest_duration %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
